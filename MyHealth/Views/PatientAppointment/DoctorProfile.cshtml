@model DatabaseLayer.DoctorTable

@{
    ViewBag.Title = "DoctorProfile";
}

<h2>Doctor Profile</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Doctor Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Contact No :

        </dt>  
        <dd>
            @Html.DisplayFor(model => model.ContactNo)
        </dd>

        <dt>
            Photo
        </dt>
        <dt>
            @{
                if (!string.IsNullOrEmpty(Model.Photo))
                {
                    <img src="@Url.Content(Model.Photo)" alt="Image" style="width:100px; height:100px;max-width:100%;height:auto;" />
                }
            }
        </dt>


        <dt>
            Gender
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GenderTable.Name)
        </dd>

        <dt>
            Fees
        </dt>

        <dt>
            Account Type( @Html.DisplayFor(model => model.AccountTypeTable.Name))
        </dt>

        <dd>
            Before Appointment Must be submit your Appointment Fee , Using This Account No :  "@Html.DisplayFor(model => model.AccountNo)"
        </dd>


        <dd>
            @Html.DisplayFor(model => model.Fees)
        </dd>

        <dt>
            Specilazation
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Splztion)
        </dd>

        <dt>
            Clinic Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClinicAddress)
        </dd>

        <dt>
            Permanent Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PermanentAddress)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>

        <dt>
            Clinic PhoneNo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClinicPhoneNo)
        </dd>

        <dt>
            About
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>




    </dl>
</div>
