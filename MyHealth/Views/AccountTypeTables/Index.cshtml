@model IEnumerable<DatabaseLayer.AccountTypeTable>

@{
    ViewBag.Title = "Index";
}

<h2>Account Types</h2>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<div class="card shadow mb-4">
    <div class=" card-header py-3">
        @Html.ActionLink("Add Account", "Create", "AccountTypeTables", new { @style = "float:left", @class = "btn btn-primary" })
        <input type="text" id="searchtype" name="searchtype" class="form-control col-md-3" style="float:right" placeholder="Search Hare" />
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspascing="0">
                <thead>
                    <tr>
                        <th>
                            Account Type
                        </th>
                        <th>Action</th>
                    </tr>

                </thead>
                <tbody id="searchvalue">
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.AccountTypeID }, new { @class = "btn btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchtype").on("keyup", function () {

            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });

    });

</script>









