@model IEnumerable<DatabaseLayer.LabTestTable>

@{
    ViewBag.Title = "AllLabTest";
}

<h2>AllLabTest</h2>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<div class="card shadow mb-4">
    <div class=" card-header py-3">
        @Html.ActionLink("New Test", "AddTest", "Lab", new { @style = "float:left", @class = "btn btn-primary" })
        <input type="text" id="searchtype" name="searchtype" class="form-control col-md-3" style="float:right" placeholder="Search Hare" />
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspascing="0">
                <thead>

                    <tr>
                        <th>
                           Test Title
                        </th>
                        <th>
                           Cost
                        </th>
                        
                        <th>Action</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cost)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LabTable.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditTest", new { id = item.LabTestID }) |
                                @Html.ActionLink("Test Details", "TestDetails", new { id = item.LabTestID }) |

                            </td>
                        </tr>
                    }

            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchtype").on("keyup", function () {

            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });

    });

</script>
