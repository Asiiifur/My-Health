@model IEnumerable<DatabaseLayer.LabTestDetailsTable>

@{
    ViewBag.Title = "Test Details";
}

<h4>Test Details</h4>
<style>
    h4 {
        text-align: center;
    }
</style>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<div class="card shadow mb-4">
    <div class=" card-header py-3">
        @Html.ActionLink("Add Details", "AddTestDetails", "Lab", new { @style = "float:left", @class = "btn btn-primary" })
        <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right" placeholder="Search Hare" />
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspascing="0">
                <thead>
                    <tr>

                        <th>
                            Test Title
                        </th>
                        <th>
                            Details
                        </th>
                        <th>
                            Min Value
                        </th>
                        <th>
                            Max value
                        </th>
                        <th>
                           Unit
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="searchvalue">

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LabTestTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MinValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaxValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "TestDetails", new { id = item.LabTestDetailID }, new { @class = "btn btn-info" })

                        </td>
                    </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {

            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });

    });

</script>