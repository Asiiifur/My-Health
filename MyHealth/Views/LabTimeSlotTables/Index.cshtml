@model IEnumerable<DatabaseLayer.LabTimeSlotTable>

@{
    ViewBag.Title = "Lab";
}


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<div class="card shadow mb-4">
    <div class=" card-header py-3">
        @Html.ActionLink("New Time Slot", "Create", "LabTimeSlotTables", new { @style = "float:left", @class = "btn btn-primary" })
        <input type="text" id="searchtype" name="searchtype" class="form-control col-md-3" style="float:right" placeholder="Search Hare" />
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspascing="0">
                <thead>
                    <tr>
                        <th>
                            Time Slot Title
                        </th>
                        <th>
                         Form Time
                        </th>
                        <th>
                           To Time
                        </th>
                        <th>
                           Status
                        </th>

                        <th></th>
                    </tr>
                    </thead>
                <tbody id="searchvalue">

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FromTime)
                        </td> 
                        <td>
                            @Html.DisplayFor(modelItem => item.ToTime)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.LabTimeSlotID }, new { @class = "btn btn-primary" })

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchtype").on("keyup", function () {

            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });

    });

</script>