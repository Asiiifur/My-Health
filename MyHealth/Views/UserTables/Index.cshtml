@model IEnumerable<DatabaseLayer.UserTable>

@{
    ViewBag.Title = "All Users";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<div class="card shadow mb-4">
    <div class=" card-header py-3">

        <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right" placeholder="Search Hare" />
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspascing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ContactNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsVerified)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserTypeTable.UserType)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="searchvalue">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsVerified)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserTypeTable.UserType)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn btn-info" })

                            </td>
                        </tr>
                    }

            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {

            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });

    });

</script>
