@model IEnumerable<MyHealth.Models.PatientAppointmentReportMV>

@{
    ViewBag.Title = "Report";
}

<h4>Enter Patient Lab Report : @ViewBag.TestName</h4>

<style>
    h4 {
        text-align: center;
    }

    h5 {
        text-align: center;
        color: firebrick
    }
</style>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card shadow mb-4">
        <div class=" card-header py-3">

            <input type="submit" class="btn btn-success form-control col-md-3" style="float:right" value="Submit Report Details" />

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="dataTable" width="100%" cellspascing="0">
                    <thead>
                        <tr>
                            <th style="display:none">
                                LabAppointID
                            </th>
                            <th style="display:none">
                                LabTestDetailID
                            </th>
                            <th>
                                Test Name
                            </th>
                            <th>
                                Min Value
                            </th>
                            <th>
                                Max Value
                            </th>
                            <th>
                                Patient Value
                            </th>
                        </tr>

                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td style="display:none">
                                @Html.HiddenFor(modelItem => item.LabAppointID)
                                @Html.DisplayFor(modelItem => item.LabAppointID)
                            </td>
                            <td style="display:none">
                                @Html.HiddenFor(modelItem => item.LabTestDetailID)
                                @Html.DisplayFor(modelItem => item.LabTestDetailID)

                            </td>
                            <td>
                                @Html.HiddenFor(modelItem => item.DetailName)
                                @Html.DisplayFor(modelItem => item.DetailName)
                            </td>

                            <td>
                                @Html.HiddenFor(modelItem => item.MinValue)
                                @Html.DisplayFor(modelItem => item.MinValue)
                            </td>
                            <td>
                                @Html.HiddenFor(modelItem => item.MaxValue)
                                @Html.DisplayFor(modelItem => item.MaxValue)
                            </td>
                            <td>
                                @Html.EditorFor(modelItem => item.PatientValue)
                            </td>


                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
}
