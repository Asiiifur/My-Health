@model IEnumerable<MyHealth.Models.PatientAppointmentReportMV>

@{
    ViewBag.Title = "Report";
}

<h2>Enter Lab Report</h2>



<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<div class="card shadow mb-4">
    <div class=" card-header py-3">

        <input type="submit" class="form-control col-md-3" style="float:right" value="Submit Report Details" />
        <h3 class="text-black">@ViewBag.TestName</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspascing="0">
                <thead>
                    <tr>
                        <th>
                            LabAppointID
                        </th>
                        <th>
                            LabTestDetailID
                        </th>
                        <th>
                            DetailName
                        </th>
                        <th>
                            MinValue
                        </th>
                        <th>
                            MaxValue
                        </th>
                        <th>
                            PatientValue
                        </th>
                    </tr>

                </thead>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.LabAppointID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LabTestDetailID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DetailName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.MinValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaxValue)
                        </td>
                        <td>
                            @Html.EditorFor(modelItem => item.PatientValue)
                        </td>


                    </tr>
                }

            </table>
        </div>
    </div>
</div>

